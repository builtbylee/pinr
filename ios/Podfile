require File.join(File.dirname(`node --print "require.resolve('expo/package.json')"`), "scripts/autolinking")
require File.join(File.dirname(`node --print "require.resolve('react-native/package.json')"`), "scripts/react_native_pods")

require 'json'
podfile_properties = JSON.parse(File.read(File.join(__dir__, 'Podfile.properties.json'))) rescue {}

ENV['RCT_NEW_ARCH_ENABLED'] = '0' if podfile_properties['newArchEnabled'] == 'false'
ENV['EX_DEV_CLIENT_NETWORK_INSPECTOR'] = podfile_properties['EX_DEV_CLIENT_NETWORK_INSPECTOR']

platform :ios, podfile_properties['ios.deploymentTarget'] || '15.1'
install! 'cocoapods',
  :deterministic_uuids => false

prepare_react_native_project!

target 'Pinr' do
  use_expo_modules!

  if ENV['EXPO_USE_COMMUNITY_AUTOLINKING'] == '1'
    config_command = ['node', '-e', "process.argv=['', '', 'config'];require('@react-native-community/cli').run()"];
  else
    config_command = [
      'npx',
      'expo-modules-autolinking',
      'react-native-config',
      '--json',
      '--platform',
      'ios'
    ]
  end

  config = use_native_modules!(config_command)

  # Enable modular headers for ALL pods to fix Firebase Swift pods + static frameworks
  # This is REQUIRED for FirebaseAuth-Swift.h generation
  use_modular_headers!
  
  use_frameworks! :linkage => podfile_properties['ios.useFrameworks'].to_sym if podfile_properties['ios.useFrameworks']
  use_frameworks! :linkage => ENV['USE_FRAMEWORKS'].to_sym if ENV['USE_FRAMEWORKS']

# @generated begin pre_installer - expo prebuild (DO NOT MODIFY) sync-c8812095000d6054b846ce74840f0ffb540c2757
  pre_install do |installer|
# @generated begin @rnmapbox/maps-pre_installer - expo prebuild (DO NOT MODIFY) sync-ea4905840bf9fcea0acc62e92aa2e784f9d760f8
    $RNMapboxMaps.pre_install(installer)
# @generated end @rnmapbox/maps-pre_installer
  end
# @generated end pre_installer
  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => podfile_properties['expo.jsEngine'] == nil || podfile_properties['expo.jsEngine'] == 'hermes',
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    :privacy_file_aggregation_enabled => podfile_properties['apple.privacyManifestAggregationEnabled'] != 'false',
  )

  post_install do |installer|
# @generated begin @rnmapbox/maps-post_installer - expo prebuild (DO NOT MODIFY) sync-c4e8f90e96f6b6c6ea9241dd7b52ab5f57f7bf36
    $RNMapboxMaps.post_install(installer)
# @generated end @rnmapbox/maps-post_installer
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      :ccache_enabled => podfile_properties['apple.ccacheEnabled'] == 'true',
    )

    # This is necessary for Xcode 14, because it signs resource bundles by default
    # when building for devices.
    installer.target_installation_results.pod_target_installation_results
      .each do |pod_name, target_installation_result|
      target_installation_result.resource_bundle_targets.each do |resource_bundle_target|
        resource_bundle_target.build_configurations.each do |config|
          config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        end
      end
    end

    # We add a build phase to gRPC-C++ to ensure the modulemap exists at build time
    # This bypasses CocoaPods 'Headers' cleanup issues
    installer.pods_project.targets.each do |target|
      if target.name == 'gRPC-C++'
        # Robustly remove any existing phase with the same name to prevent duplicates
        target.build_phases.reject! { |bp| bp.respond_to?(:name) && bp.name == 'Fix gRPC Modulemap' }
        
        puts "[Pinr] Adding gRPC modulemap fix script to gRPC-C++ target"
        phase = target.new_shell_script_build_phase('Fix gRPC Modulemap')
        phase.shell_script = <<-SCRIPT
          mkdir -p "${PODS_ROOT}/Headers/Private/grpc"
          if [ ! -f "${PODS_ROOT}/Headers/Private/grpc/gRPC-Core.modulemap" ]; then
            cp "${PODS_ROOT}/Target Support Files/gRPC-Core/gRPC-Core.modulemap" "${PODS_ROOT}/Headers/Private/grpc/gRPC-Core.modulemap"
          fi
        SCRIPT
        # Move to top (and ensure existing one is gone)
        target.build_phases.delete(phase) # Remove the one added by new_shell_script_build_phase (at end)
        target.build_phases.unshift(phase) # Add at beginning
      end
    end
    
    # Explicitly resolve DEFINES_MODULE conflicts properties
    # This ensures valid xcconfig generation for all targets
    installer.pods_project.targets.each do |target|
      # Only enforce DEFINES_MODULE for gRPC and Firebase to fix static framework issues
      # fastlane/issues/1 and firebase-ios-sdk/issues/1000
      if target.name.include?('gRPC') || target.name.include?('Firebase') || target.name.include?('leveldb')
        target.build_configurations.each do |config|
          config.build_settings['DEFINES_MODULE'] = 'YES'
          config.build_settings['SWIFT_INSTALL_OBJC_HEADER'] = 'YES'
        end
      end
      
      # Disable modules for React Native targets that conflict with system modules
      # This is necessary when using global use_modular_headers! with static frameworks
      react_targets_needing_no_modules = [
        'React-RuntimeHermes',
        'React-RCTAppDelegate',
        'React-RuntimeCore',
        'React-Core',
        'React-Fabric',
        'React-FabricComponents',
        'React-RCTFabric',
        'ReactCommon'
      ]
      if react_targets_needing_no_modules.any? { |name| target.name.include?(name) }
        target.build_configurations.each do |config|
          config.build_settings['CLANG_ENABLE_MODULES'] = 'NO'
        end
      end
    end

    # Fix React-jsitooling modulemap: Rename module to avoid conflict with React-RuntimeCore
    # Both define 'module react_runtime' which causes redefinition errors
    jsitooling_modulemap = "#{installer.sandbox.root}/Target Support Files/React-jsitooling/React-jsitooling.modulemap"
    if File.exist?(jsitooling_modulemap)
      content = File.read(jsitooling_modulemap)
      # Rename the module to avoid conflict
      new_content = content.gsub('module react_runtime', 'module React_jsitooling')
      # Also remove the problematic submodule export if present (it shouldn't be with the rename, but good for safety)
      new_content = new_content.gsub(/module \* \{ export \* \}/, '')
      
      if content != new_content
        File.write(jsitooling_modulemap, new_content)
        puts "[Pinr] Patched React-jsitooling.modulemap: Renamed module to React_jsitooling"
      end
    end
  end
end

target 'OneSignalNotificationServiceExtension' do
  pod 'OneSignalXCFramework', '>= 5.0', '< 6.0'
  use_frameworks! :linkage => podfile_properties['ios.useFrameworks'].to_sym if podfile_properties['ios.useFrameworks']
end