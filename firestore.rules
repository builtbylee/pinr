rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // USERS COLLECTION
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // SIMPLIFIED UPDATE RULE: 
      // Allow updates if it's your own profile OR if you are logged in (for friend adds).
      // We will re-secure this later once the friend logic is solidified.
      allow update: if request.auth != null; 
      
      allow delete: if request.auth.uid == userId;
    }

    // PINS COLLECTION
    match /pins/{pinId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.creatorId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.creatorId == request.auth.uid;
    }
    
    // FRIEND REQUESTS COLLECTION
    match /friend_requests/{requestId} {
      allow read: if request.auth != null && (resource.data.fromUid == request.auth.uid || resource.data.toUid == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.fromUid == request.auth.uid;
      allow update: if request.auth != null && (resource.data.fromUid == request.auth.uid || resource.data.toUid == request.auth.uid);
      allow delete: if request.auth != null && (resource.data.fromUid == request.auth.uid || resource.data.toUid == request.auth.uid);
    }

    // GAME CHALLENGES COLLECTION (NEW)
    match /game_challenges/{challengeId} {
      allow read: if request.auth != null && (resource.data.challengerId == request.auth.uid || resource.data.opponentId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.challengerId == request.auth.uid;
      allow update: if request.auth != null && (resource.data.challengerId == request.auth.uid || resource.data.opponentId == request.auth.uid);
    }

    // LEADERBOARD COLLECTION
    match /game_leaderboard/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.data.odUid == request.auth.uid;
    }

    // STORIES COLLECTION
    match /stories/{storyId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.creatorId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.creatorId == request.auth.uid;
    }
  }
}
